<div class="container-fluid" id="container-fluid">
    <form id="addCourse" action="/attendance/add" method="POST" class="form-edit-course needs-validations" novalidate>
        {{#each errors}}
        <div class="alert alert-danger custom-alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top:0px;">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="media">
                <i class="fa fa-exclamation-triangle fa-2x" aria-hidden="true"></i>
                <div class="media-body ml-4 mt-1">
                    <strong>{{text}}</strong>
                </div>
            </div>
        </div>
        {{/each}}

        <h4>Add Attendance</h4>
        <hr>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="startDate">Start Date</label>
                <input type="time" id="datepicker" class="form-control attendance" value="{{body.startDate}}" name="startDate"
                    placeholder="Enter Start Date" required>
            </div>
        </div>
        <button type="submit" class="btn btn-default btn-lg btn-block">Add
            &nbsp;&nbsp;
            <i class="fa fa-save fa-lg"></i>
        </button>

    </form>
</div>
